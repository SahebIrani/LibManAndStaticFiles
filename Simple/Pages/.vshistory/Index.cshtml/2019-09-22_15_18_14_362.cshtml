@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<article class="text-center border rounded p-5 d-flex align-items-center justify-content-center align-content-center">
    <img src="~/imgs/1.png" class="img-thumbnail img-fluid w-50" />
    <img src="~/StaticFiles/imgs/2.png" class="img-thumbnail img-fluid w-50" />
    <img src="~/MyImages/2.png" class="img-thumbnail img-fluid w-50" />
    <img src="~/MyStaticFiles/imgs/2.png" class="img-thumbnail img-fluid w-50" />
    <img asp-append-version="true" src="~/Images/MyImage" class="img-thumbnail img-fluid w-50" />
    <video controls="controls">
        <source src="~/imgs/bandbaz.mp4" type="video/mp4" />
    </video>
    <a class="btn-link" asp-controller="Images" asp-action="MyImage">MyImage</a>
</article>

@section Scripts{
    <script>
        var adminManager = new ActiveXObject('Microsoft.ApplicationHost.WritableAdminManager');
        adminManager.CommitPath = "MACHINE/WEBROOT/APPHOST/Contoso";

        var directoryBrowseSection = adminManager.GetAdminSection("system.webServer/directoryBrowse", "MACHINE/WEBROOT/APPHOST/Contoso");
        directoryBrowseSection.Properties.Item("enabled").Value = true;
        directoryBrowseSection.Properties.Item("showFlags").Value = "Date, Time, Size, Extension, LongDate";

        adminManager.CommitChanges();
    </script>
}